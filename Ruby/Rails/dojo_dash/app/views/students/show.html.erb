<div class="container">
  <h1> <%= @dojo.branch %>'s <%= @student.first_name %> <%= @student.last_name %>  </h1>

  <h5>Email:  <%= @student.email %> </h5>

  <h3>Cohort Roster</h3>
  <table>
    <thead>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <% @cohort.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><a href="/dojos/<%= student.dojo_id %>/students/<%= student.id %> ">Show</a> | <a href="/dojos/<%= student.dojo_id %>/students/<%= student.id %>/edit">Edit</a> | </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <form class="" action="/students/<%= @student.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" value="Delete">
  </form>

<div class="container">
  <h1> <%= @dojo.branch %> Dojo </h1>
  <h5>Address: <%= @dojo.street %></h5>
  <h5>City:  <%= @dojo.city %> </h5>
  <h5>State:  <%= @dojo.state %> </h5>
  <h3>Student Roster</h3>
  <table>
    <thead>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><a href="/dojos/<%= student.dojo_id %>/students/<%= student.id %> ">Show</a> | <a href="/dojos/<%= student.dojo_id %>/students/<%= student.id %>/edit">Edit</a> | </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <a href="/dojos">Home</a> | <a href="/dojos/<%=@dojo.id %>/edit">Edit Dojo</a> | <a href="/dojos/<%= @dojo.id %>/students/new">Add Student</a> 
</div>

<div class="row">
  <div class="col-sm-5">
    <h1>All Posts</h1>
    <table class= "table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Author</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= "#{post.user.first_name} #{post.user.last_name}" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-sm-5">
    <h1>New Post</h1>
    <form action="/posts" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="form-group">
        <label for="first_name">Title:</label>
        <input type="text" name="post[title]" class="form-control" id="title">
      </div>
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-control" id="content" name="post[content]" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label>Author</label>
        <select name="post[user_id]" class="custom-select">
          <<option selected> Click to see authors</option>
          <% @users.each do |user| %>
          <option value="<%=user.id%>"> <%=user.first_name%> <%=user.last_name%></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Post</button>
      </div>
    </form>
  </div>
  <div class="col-sm-2">
    <h1>Go to Users Page</h1>
    <a href="/users" class="btn btn-info">All Posts</a>
  </div>
</div>
